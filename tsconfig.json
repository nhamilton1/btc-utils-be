{
  "compilerOptions": {
    /* Docs: https://www.typescriptlang.org/tsconfig */ "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "checkJs": true,
    "allowJs": true,
    "moduleResolution": "node",
    "types": ["node"],
    "lib": ["esnext"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowUnreachableCode": true,
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true
  },
  "include": [
    "api/**/*.ts",
    "api/**/*.js",
    "index.ts",
    "job-scheduler.ts",
    "knexfile.ts",
    "delete-invalid-date.ts"
  ],
  "exclude": ["node_modules", "<node_internals>/**", "test", "bin", "out"]
}

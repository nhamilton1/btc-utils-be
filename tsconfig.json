{
  "compilerOptions": {
    /* Docs: https://www.typescriptlang.org/tsconfig */ "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "api",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "checkJs": true,
    "allowJs": true,
    "moduleResolution": "node",
    "types": ["node"],
    "lib": ["es6"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowUnreachableCode": true,
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true
  },
  "include": ["api/**/*.ts", "api/**/*.js"],
  "exclude": ["node_modules", "<node_internals>/**", "test", "bin", "out"]
}
